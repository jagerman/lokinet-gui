{
  "appId": "org.lokinet.gui",
  "directories": {
    "output": "release/"
  },
  "asar": true,
  "mac": {
    "identity": null,
    "target": "dmg",
    "category": "public.app-category.utilities",
    "minimumSystemVersion": "10.15",
    "executableName": "Lokinet-GUI"
  },
  "win": {
    "target": ["portable"]
  },
  "portable": {
    "artifactName": "Lokinet-GUI_portable.exe",
    "requestExecutionLevel": "admin"
  },
  "linux": {
    "target": ["deb"]
  },
  "deb": {
    "packageCategory": "net",
    "depends": ["lokinet (>= 0.9.10~)", "gconf2", "gconf-service", "libnotify4", "libxtst6", "libnss3"]
  },
  "files": [
    "dist/**/*",
    "dist/*",
    "build-scripts/*",
    "icons/*",
    "fonts/*",
    "images/*",
    "js/main.js"
  ]
}
